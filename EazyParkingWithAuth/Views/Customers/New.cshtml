@model EazyParkingWithAuth.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Birthday)
        @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(model => model.IsSubscribedToNewsletter) Subscribe to News Letter?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MembershipTypeId)
        @Html.DropDownListFor(model => model.MembershipTypeId, new SelectList(Model.))
        @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control" })
    </div>
}
